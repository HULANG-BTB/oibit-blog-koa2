{
  "name": "blog-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main",
    "dev": "./node_modules/.bin/nodemon src/main --exec babel-node",
    "build": "babel src --out-dir dist",
    "prd": "pm2 start dist/main.js",
    "models": "babel-node ./models.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint",
    "fix": "prettier -w src"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "koa": "^2.7.0",
    "koa-body": "^4.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.12.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^10.5.3",
    "nodemon": "^1.19.1",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "sequelize-auto": "^0.7.6",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
