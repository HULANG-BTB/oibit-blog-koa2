import { Service } from '../lib/core/decorator'

@Service
class {{name}} {

  static async list({ page, size }) {
    const offset = (page - 1) * size
    const limit = size
    const result = await this.model.{{name}}.findAll({
      offset,
      limit
    })
    return result
  }

  static async insert(data) {
    return await this.model.{{name}}.create(data)
  }

  static async update(data) {
    return await this.model.{{name}}.save(data)
  }

  static async delete({ id }) {
    return await this.model.{{name}}.destory(id)
  }

}

export default {{name}}
